my i = 0;

assert(i, 0);

if i {
  i = 4;
}

assert(i, 0);

if i == 0 {
  i = 1;
}

assert(i, 1);

i = 2 if i;

assert(i, 2);

i = 3 unless i;

assert(i, 2);

unless i {
  i = 4;
}

assert(i, 2);

unless i == 0 {
  i = 3;
}

assert(i, 3);

while i < 10 {
  i = i + 1;
}

assert(i, 10);

until i <= 0 {
  i = i - 1;
}

assert(i, 0);
